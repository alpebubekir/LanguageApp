                                android:scaleType="fitCenter"
                                android:src="@drawable/arabic_flag"/>

                        </androidx.cardview.widget.CardView>

                        <Button
                            android:layout_marginTop="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_style"
                            android:text="BAŞLA"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/background"
                            android:textAlignment="center"
                            android:padding="2dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/card_frame"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:layout_marginLeft="11dp"
                            android:id="@+id/spanishWords"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="İspanyolca"
                            android:textColor="@color/text"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins"/>
                        <TextView
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/spanishWordNumbers"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="20 kelime"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"
                            android:textAlignment="center"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="75dp"
                            app:cardPreventCornerOverlap="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/spain_flag"/>

                        </androidx.cardview.widget.CardView>

                        <Button
                            android:layout_marginTop="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_style"
                            android:text="BAŞLA"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/background"
                            android:textAlignment="center"
                            android:padding="2dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:id="@+id/cards3"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/card_frame">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:layout_marginLeft="11dp"
                            android:id="@+id/arabiccWords"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="Arapça"
                            android:textColor="@color/text"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins"/>
                        <TextView
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/arabiccWordNumbers"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="20 kelime"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"
                            android:textAlignment="center"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="75dp"
                            app:cardPreventCornerOverlap="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/arabic_flag"/>

                        </androidx.cardview.widget.CardView>

                        <Button
                            android:layout_marginTop="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_style"
                            android:text="BAŞLA"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/background"
                            android:textAlignment="center"
                            android:padding="2dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/card_frame">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:layout_marginLeft="11dp"
                            android:id="@+id/spanishhWords"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="İspanyolca"
                            android:textColor="@color/text"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/poppins"/>
                        <TextView
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="2dp"
                            android:id="@+id/spanishhWordNumbers"
                            android:layout_width="78dp"
                            android:layout_height="wrap_content"
                            android:text="20 kelime"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"
                            android:textAlignment="center"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="75dp"
                            app:cardPreventCornerOverlap="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/spain_flag"/>

                        </androidx.cardview.widget.CardView>

                        <Button
                            android:layout_marginTop="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_style"
                            android:text="BAŞLA"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/background"
                            android:textAlignment="center"
                            android:padding="2dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>