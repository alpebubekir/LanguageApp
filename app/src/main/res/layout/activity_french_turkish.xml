<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".french_turkish"
    android:orientation="vertical"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".10"
        android:id="@+id/nav">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Öğren"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".90"
        android:id="@+id/ogren_main">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView

                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginLeft="35dp"
                app:cardCornerRadius="125dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/imageViewWord"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stock_photo" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewTR"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginTop="70dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/turkey_flag"
                android:fontFamily="@font/poppins"
                android:padding="15dp"
                android:text="Kalem"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEN"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/france_flag_ogren"
                android:fontFamily="@font/poppins"
                android:padding="15dp"
                android:text="Kalem"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/voice"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="40dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_mic_none_24" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/oncekiFr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ogrendim_button"
                    android:fontFamily="@font/poppins"
                    android:onClick="oncekiFr"
                    android:text="geri"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/ogrendimFr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:background="@drawable/ogrendim"
                    android:fontFamily="@font/poppins"
                    android:text="Öğrendim"
                    android:textColor="@color/purple" />

                <Button
                    android:id="@+id/sonrakiFr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:background="@drawable/ogrendim_button"
                    android:fontFamily="@font/poppins"
                    android:onClick="sonrakiFr"
                    android:text="ileri"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>